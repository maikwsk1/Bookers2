
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <% flash.each do |key, message| %>
          <div class="flash <%= key %>">
            <%= message %>
          </div>
        <% end %>
    <h2>User info</h2>
        <table>
          <tr>
            <td><%= image_tag @user.get_profile_image(100, 100) %></td>
            <td></td>
          </tr>
          <tr class="table">
            <td><b>name</b></td>
            <td><b><%= @user.name %></b></td>
          </tr >
          <tr class="table">
            <td><b>introduction</b></td>
            <td><b><%= @user.introduction %></b></td>
          </tr>
        </table>

<a href="<%= edit_user_path(@user) %>" class="btn btn-outline-secondary w-100"><i class='fas fa-user-cog'></i></a>

        <h2>New book</h2>
        <%= form_for @book, url: books_path, method: :post do |f| %>
          <div class="mb-3">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :opinion, class: "form-label" %>
            <%= f.text_area :body, class: "form-control", rows: 3 %>
          </div>

          <div>
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
        <% end %>
      </div>

     <div class="col-md-8 offset-md-1">
        <h2 class="column">Books</h2>
        <table class="table">
          <tr class="columnb">
            <th scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
           
          </tr>
          <% @books.each do |book| %>
          <tr class="columnt">
            <td>  <%= link_to user_path(book.user.id) do%> 
            <%= image_tag book.user.get_profile_image(80, 80) %>
            <% end %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
           <% end %>
          </tr>
          
         
        </table>

         </div>
    </div>
  </div>

