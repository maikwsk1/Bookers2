
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <% flash.each do |key, message| %>
          <div class="flash <%= key %>">
            <%= message %>
          </div>
        <% end %>
    <h2>User info</h2>
        <table>
          <tr>
            <td><%= image_tag @user.get_profile_image(100, 100) %></td>
            <td></td>
          </tr>
          <tr class="columnt">
            <td><b>name</b></td>
            <td><b><%= @user.name %></b></td>
          </tr >
          <tr class="columnt">
            <td><b>introduction</b></td>
            <td><b><%= @user.introduction %></b></td>
          </tr>
        </table>

     <% if @user == current_user %>
  <div class="d-grid gap-2 ">
    <button type="button" class="btn btn-outline-secondary  w-100">
      <%= link_to raw("<i class='fas fa-user-cog'></i> "), edit_user_path(@user) %>
    </button>
  </div>
<% end %>


        <h2>New book</h2>
        <%= form_for @book, url: books_path, method: :post do |f| %>
          <div class="mb-3">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :body, class: "form-label" %>
            <%= f.text_area :body, class: "form-control", rows: 3 %>
          </div>

          <div>
            <%= f.submit 'Create Book', class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>

     <div class="col-md-8 offset-md-1">
        <h2 class="column">Books</h2>
        <table>
          <tr class="columnb">
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
           
          </tr>
          <% @books.each do |book| %>
          <tr class="columnt">
            <td>  <%= link_to user_path(book.user.id) do%> 
            <%= image_tag book.user.get_profile_image(80, 80) %>
            <% end %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
           <% end %>
          </tr>
        </table>

         </div>
    </div>
  </div>

