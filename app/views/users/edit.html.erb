<h2>Uservinfo</h2>
<%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>
  <div><label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id: "inputName"%>
 </div> <!-- エラーメッセージを表示 -->
  <div>
  <% if @user.errors.has_key?(:name) %>
    <p class="error"><%= @user.errors.full_messages_for(:name).join(', ') %></p>
  <% end %></div>

  <div><label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, accept: "image/*" %></div>

   <div><label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id: "inputIntroduction" %>
  </div>
  <!-- エラーメッセージを表示 -->
  <div> <% if @user.errors.has_key?(:introduction) %>
    <p class="error"><%= @user.errors.full_messages_for(:introduction).join(', ') %></p>
  <% end %> </div>

  <div><%= f.submit "Update User" %></div>
<% end %>
