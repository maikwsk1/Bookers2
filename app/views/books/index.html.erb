<h1>User info</h1>
<table>
  <tr>
    <td><%= image_tag @user.get_profile_image(100, 100) %></td>
    <td></td>
  </tr>
  <tr>
    <td><b>name</b></td>
    <td><b><%= @user.name %></b></td>
  </tr>
  <tr>
    <td><b>introduction</b></td>
    <td><b><%= @user.introduction %></b></td>
  </tr>
</table>

<% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
<% end %>

<% @books.each do |book| %>

  <div>
    <p><%= image_tag book.get_image %></p>  

    <p>ショップ名：<%= book.title %></p>
    <p>説明：<%= book.body %></p>

    <%= link_to "Show", book_path(book.id), class: "show-link" %>
    <%= link_to "Edit", edit_book_path(book.id), class: "edit-link" %>
  </div>
<% end %>

<h1>画像投稿フォーム</h1>
<%= form_for @book, url: books_path, method: :post do |f| %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>ショップ名</h4>
  <%= f.text_field :title %>
  <h4>説明</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>
