<header>
  <% @books.each do |book| %>
    <%= link_to book_path(book.id) do %>
      <%= image_tag book.get_image %>
    <% end %>
  <% end %>
</header>

<h1>User info</h1>
<% @books.each do |book| %>
  <div>
    <%= image_tag book.user.get_profile_image(100, 100) %>
    <p>name：<%= book.user.name %></p>
  </div>

  <div>
    <p><%= image_tag book.get_image %></p>  

    <p>ショップ名：<%= book.title %></p>
    <p>説明：<%= book.body %></p>

    <%= link_to "Show", book_path(book.id), class: "show-link" %>
    <%= link_to "Edit", edit_book_path(book.id), class: "edit-link" %>
  </div>
<% end %>

<h1>画像投稿フォーム</h1>
<%= form_with model: @book do |f| %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>ショップ名</h4>
  <%= f.text_field :title %>
  <h4>説明</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>
