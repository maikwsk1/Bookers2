<!-- app/views/users/show.html.erb -->

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <table>
        <tr>
          <td><%= image_tag @user.get_profile_image(100, 100) %></td>
          <td></td>
        </tr>
        <tr>
          <td><b>name</b></td>
          <td><b><%= @user.name %></b></td>
        </tr>
        <tr>
          <td><b>introduction</b></td>
          <td><b><%= @user.introduction %></b></td>
        </tr>
      </table>

      <% if current_user == @user %>
        <button type="button" class="btn btn-secondary">
          <%= link_to raw("<i class='fas fa-user-cog'></i> "), edit_user_path(@user) %>
        </button>
      <% else %>
        <button type="button" class="btn btn-secondary">
          <%= link_to raw("<i class='fas fa-user-cog'></i> "), user_path(current_user) %>
        </button>
      <% end %>

      <h1>New book</h1>
      <%= form_for @book, url: books_path, method: :post do |f| %>
        <div>Title</div>
        <%= f.text_field :title %>
        <div>Opinion</div>
        <%= f.text_area :body %>
        <div><%= f.submit 'Create Book' %></div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <% if @book.errors.any? %>
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <h1>Books</h1>
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(100, 100) %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
