<div class="container">
  <div class="row">

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    <div class="col-md-3"><main>
      <h2>User info</h2>
      <table>
        <tr>
          <td><%= image_tag @user.get_profile_image(100, 100) %></td>
          <td></td>
        </tr>
        <tr class="table">
          <td><b>name</b></td>
          <td><b><%= @user.name %></b></td>
        </tr>
        <tr class="table">
          <td><b>introduction</b></td>
          <td><b><%= @user.introduction %></b></td>
        </tr>
      </table>

      <% if current_user == @user %>
 <a href="<%= edit_user_path(@user) %>" class="btn btn-outline-secondary w-100"><i class='fas fa-user-cog'></i></a>
      <% else %>
     <a href="<%= user_path(current_user) %>" class="btn btn-outline-secondary w-100"><i class='fas fa-user-cog'></i></a>
      <% end %>
      
   

      <h2>New book</h2>
      <%= form_for @book, url: books_path, method: :post do |f| %>
           <div class="mb-3">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :opinion, class: "form-label" %>
            <%= f.text_area :body, class: "form-control", rows: 3 %>
          </div>

          <div>
                
        <button type="submit" class="btn btn-success">Create Book</button>
      </div>
     
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <tr class="columnb">
          <th scope="col"></th>
          <th scope="col">Title</th>
          <th scope="col">Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(100, 100) %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
</main>